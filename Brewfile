# Brewfile for textract-py3 dependencies
# Usage: brew bundle

# GUI requirement for some dependencies
cask "xquartz"

# Core dependencies
brew "antiword"        # .doc files (unmaintained but still needed)
brew "ghostscript"     # .ps files (provides ps2ascii)
brew "poppler"         # .pdf files (provides pdftotext)
brew "sox"             # .mp3, .ogg, .wav audio files
brew "tesseract"       # .gif, .jpg, .png, .tiff image OCR
brew "unrtf"           # .rtf files

# Build dependencies
brew "swig"            # Python extension building
